<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- <<< İzinler application etiketinin DIŞINDA olmalı >>> -->
    <!-- İnternet İzni -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- Konum İzinleri -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- Bildirim İzinleri -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <!-- Arka Plan Konum İzni (Gerekliyse ve çok dikkatli kullanılacaksa) -->
    <!-- <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" /> -->


    <application
        android:label="kan_bul"
        android:name="${applicationName}"
        android:icon="@mipmap/launcher_icon"
        android:enableOnBackInvokedCallback="true">

        <!-- <<< YENİ: Google Maps API Anahtarı >>> -->
        <!-- Firebase'den alınan Android key kullanılıyor -->
        <meta-data android:name="com.google.android.geo.API_KEY"
                   android:value="AIzaSyCejYAI4EG_1M5tZGyetf1Li7LYgpxIAVw"/>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            <!-- ... (intent-filter ve diğer meta-data aynı) ... -->
             <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <!-- Share Plus için gerekli intent-filter -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

     <!-- Required to query activities that can process text... -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
         <!-- Harita uygulamalarını açabilmek için (Opsiyonel) -->
         <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="geo" />
         </intent>
         <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="google.navigation" />
         </intent>
    </queries>

</manifest>
